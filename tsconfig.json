{
  "compilerOptions": {                                          
"lib": ["dom", "DOM.Iterable", "ESNext"],                                        
"allowJs": true,                                  
"jsx": "react-jsx",                                                
"noEmit": true,                                   
"strict": true,                                      
"moduleResolution": "node",      
"resolveJsonModule": true, 
"isolatedModules": true,          
"allowSyntheticDefaultImports": true,             
"esModuleInterop": true,                             
"module": "commonjs",                                                                
"skipLibCheck": true,                                 
"forceConsistentCasingInFileNames": true           
  },
  "include": ["src"]
}
